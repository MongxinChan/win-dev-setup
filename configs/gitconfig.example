# .gitconfig 示例文件
# 使用方法：复制此文件内容到 ~/.gitconfig，并替换占位符

[user]
    # 替换为你的真实信息
    name = <Your Name>
    email = <your-email@example.com>

[core]
    # 针对 Windows 用户处理换行符
    autocrlf = true
    # 忽略文件权限变化（Windows 下常见问题）
    filemode = false
    # 默认编辑器设为已便携化的 VS Code
    editor = code --wait

[alias]
    # 提高效率的缩写命令
    st = status
    co = checkout
    br = branch
    cm = commit
    # 格式化 log 输出，展示清晰的分支图
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[init]
    # 设置默认分支名
    defaultBranch = main

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true